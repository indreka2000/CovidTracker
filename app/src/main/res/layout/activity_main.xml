<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/covid4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="World record"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cases"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of Cases"
                        android:textColor="@color/black"
                        android:id="@+id/tvCases"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:padding="4dp"
                        android:textSize="12sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recovered"
                        android:textColor="@color/black"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of Recovered"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:id="@+id/tvRecovered"
                        android:layout_gravity="center_horizontal"
                        android:padding="4dp"
                        android:textSize="12sp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deaths"
                        android:textColor="@color/black"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of Deaths"
                        android:textColor="@color/black"
                        android:id="@+id/tvDeaths"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:padding="4dp"
                        android:textSize="12sp"/>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cases Today"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of Today"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:padding="4dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tvTodayCases"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recovered Today"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:padding="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of Today"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:id="@+id/tvTodayRecovered"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deaths Today"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:padding="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Number of Today"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:id="@+id/tvTodayDeaths"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active/Critical"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp"
                            android:text="Active Cases"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvActiveCases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp"
                            android:text="Number of Active Cases"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Critical Cases"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of Critical Cases"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="12sp"
                            android:id="@+id/tvCriticalCases"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Covid - 19 in Estonia"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:layout_margin="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cases"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:padding="4dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of Cases"
                            android:textAlignment="center"
                            android:id="@+id/tvCasesEstonia"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recovered"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:padding="4dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of Recovered"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:padding="4dp"
                            android:id="@+id/tvRecoveredInEstonia"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deaths"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:padding="4dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of Deaths"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:padding="4dp"
                            android:id="@+id/tvNumberofDeathsinEstonia"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Covid - 19 in Estonia Today"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cases Today"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:padding="4dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Number of Today"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:padding="4dp"
                                android:id="@+id/tvCasesTodayinEstonia"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Recovered Today"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:padding="4dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Number of Today"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:padding="4dp"
                                android:textSize="12sp"
                                android:id="@+id/tvRecoveredinEstoniaToday"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Deaths Today"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:padding="4dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Number of Today"
                                android:textSize="12sp"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:padding="4dp"
                                android:id="@+id/tvDeathsinEstoniaToday"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active/Critical"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:padding="3dp"
                        android:layout_margin="3dp"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Active Cases"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:padding="4dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Number of Active Cases"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textSize="12sp"
                                android:padding="4dp"
                                android:id="@+id/tvNumberofActiveCasesinEstonia"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Critical Cases"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:padding="4dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Number of Critical Cases"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:padding="4dp"
                                android:id="@+id/tvCriticalCasesinEstonia"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</ScrollView>